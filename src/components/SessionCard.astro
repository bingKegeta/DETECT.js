---
const { name: sessionName, time } = Astro.props;
---

<session-card data-name={sessionName}>
  <button
    data-name={sessionName}
    class="max-w-full m-auto p-4 bg-base-200 rounded-lg shadow-lg border-4 border-primary mb-4 cursor-pointer hover:bg-base-300 transition duration-150"
  >
    <div class="flex justify-between items-center">
      <p class="text-base-content text-xl font-medium">{sessionName}</p>
      <p class="text-neutral-content text-sm p-1 bg-neutral rounded-full">
        {time}
      </p>
    </div>
  </button>
</session-card>
<script>
  class SessionCard extends HTMLElement {
    connectedCallback() {
      // Read the message from the data attribute.
      const message = this.dataset.name;
      const button = this.querySelector("button");
      if (button) {
        button.addEventListener("click", () => {
          alert(message); //! placeholder
          // TODO: Change this code to get the session details
        });
      }
    }
  }

  customElements.define("session-card", SessionCard);
</script>
