---
import ThemeSwitcher from "./ThemeSwitcher";
---

<header
    class="flex justify-between bg-base-200 items-center p-5 text-base-content border-4 border-primary m-4 rounded-lg"
>
    <!-- Logo -->
    <div class="bg-primary rounded-full p-4 shadow-lg">
        <h1 class="text-primary-content font-bold text-2xl">DETECT</h1>
    </div>

    <!-- Navigation -->
    <div class="rounded-full p-4 bg-base-300 shadow-lg border-4 border-primary">
        <nav>
            <ul class="list-none flex gap-10">
                <li>
                    <a
                        href="/dashboard"
                        class="hover:text-primary transition-colors duration-200"
                        >Home</a
                    >
                </li>
                <li>
                    <a
                        href="#"
                        class="hover:text-primary transition-colors duration-200"
                        >About</a
                    >
                </li>
                <li>
                    <a
                        href="#"
                        class="hover:text-primary transition-colors duration-200"
                        >Video Upload</a
                    >
                </li>
            </ul>
        </nav>
    </div>

    <!-- Settings & Theme Switcher (Now Side-by-Side) -->
    <div class="p-4 shadow-lg bg-base-300 border-4 border-primary rounded-full flex items-center gap-4">
        <a
          href="/settings"
          class="hover:text-primary transition-colors duration-200"
        >
          Settings
        </a>

        <ThemeSwitcher client:load />
    </div>
</header>
